{
    "include": ["src", "types"],
    "compilerOptions": {
        "allowJs": true,
        "module": "es6",
        "outDir": "./dist",
        "lib": ["dom", "esnext"],
        "importHelpers": true,
        "declaration": true,
        "sourceMap": true,
        "rootDir": "./src",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "jsx": "react",
        "esModuleInterop": true
    }
}
